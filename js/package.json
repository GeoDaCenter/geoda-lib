{
  "name": "geodalib",
  "version": "0.0.0",
  "description": "GeoDaLib JavaScript Library for Spatial Data Analysis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "production": "lerna run production --npm-client=yarn",
    "build": "lerna run build --npm-client=yarn",
    "test": "lerna run test --npm-client=yarn",
    "lint": "lerna run lint --npm-client=yarn -- --fix",
    "version-prerelease": "lerna version prerelease --no-push --sync-workspace-lock --no-git-tag-version --force-publish && ts-node scripts/update-version.mjs",
    "version-patch": "lerna version patch --no-push --sync-workspace-lock --no-git-tag-version --force-publish && ts-node scripts/update-version.mjs",
    "version-minor": "lerna version minor --no-push --sync-workspace-lock --no-git-tag-version --force-publish && ts-node scripts/update-version.mjs",
    "version-major": "lerna version major --no-push --sync-workspace-lock --no-git-tag-version --force-publish && ts-node scripts/update-version.mjs",
    "publish-dry-run": "turbo run publish && lerna publish from-package --yes --dry-run",
    "publish-preview": "turbo run publish && lerna publish from-package --yes --dist-tag preview",
    "publish-release": "turbo run publish && lerna publish from-package --yes"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^3.11.0",
    "@lerna-lite/publish": "^3.11.0",
    "@lerna-lite/run": "^3.12.1",
    "@lerna-lite/version": "^3.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "0.17.15",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.2",
    "typescript": "~5.3.3"
  },
  "volta": {
    "node": "18.19.0",
    "yarn": "4.0.0"
  },
  "packageManager": "yarn@4.0.0"
}
