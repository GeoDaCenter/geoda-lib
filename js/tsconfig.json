{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM", "webworker"],
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"]
}
